<%= form_for @conversation do |f| %>
  <%= f.label :partner_id , 'Select or Enter Your Conversation Partner' %></br>
  
  <%= f.collection_select :partner_id, current_user.partners.uniq, :id, :name %> </br>
   
  <%= label_tag :partner_name, 'Create a New Partner' %></br>
  <%= text_field_tag :partner_name %> </br>

  <%= f.label :topics, 'Choose a New Topic' %> </br>
  <%= f.collection_check_boxes :topic_ids, Topic.all, :id, :name %> </br>

  <%= f.label :reviews, "Rate Your Conversation" %>
    <%= f.fields_for :review do |button| %> 
     <% (1..5).each do |num| %>
      <%= num %>
      <%= button.radio_button :rating, num %>
    <% end %>
<% end %><br>

  <%= f.submit %>
<% end %> 

