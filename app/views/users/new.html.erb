<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

<%= f.label :name %>
<%= f.text_field :name %>
<br><br>
<%= f.label :awkwardness %>
<%= f.text_field :awkwardness %>
<br><br>
<%= f.label :fun_fact %>
<%= f.text_field :fun_fact %>
<br><br>
<%= f.label :email %>
<%= f.text_field :email %>
<br><br>
<%= f.label :password %>
<%= f.password_field :password %>
<br><br>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<br><br>

<%= f.submit %>



<% end %>
